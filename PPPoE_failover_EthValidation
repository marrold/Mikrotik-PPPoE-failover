### This is some demo code for locating Ethernet interfaces from PPPoE interfaces 

:local InstWanInt "WAN1 - Plusnet VSL"
:local InstEthInt [pick "$InstWanInt" 7 [:len "$InstWanInt"]]
:local InstWanGlob [pick "$InstWanInt" 0 4]
:local EthValidated
:local FullEth

:foreach i in=[/interface ethernet find] do={
	local EthPick [/interface ethernet get $i name]
	local EthPick [:pick "$EthPick" 5 [:len "$InstWanInt"]]
	:put $EthPick
	:if ("$EthPick" = "$InstEthInt") do={
    :set FullEth [/interface ethernet get $i name]
    }
}

:if ([:typeof $FullEth] = "nothing") do={
	:return "Unable to find Ethernet interface"
} else={
	:put "Found the Ethernet interface, it's $FullEth"
}

